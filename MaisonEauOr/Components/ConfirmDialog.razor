@inject LocalizationService Lang

<MudDialog>
    <DialogContent>
        <MudText>@Text</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Dark" OnClick="@Cancel">@(Lang.Get("confirmDialog_cancel"))</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="@Confirm">@(Lang.Get("confirmDialog_confirm"))</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public MudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter]
    public string Text { get; set; } = null!;

    private void Cancel() => MudDialog.Close(false);
    private void Confirm() => MudDialog.Close(true);
}