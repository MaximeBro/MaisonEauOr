@inherits LayoutComponentBase

<PageTitle>MaisonEauOr</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <CascadingValue Name="MainLayoutInstance" Value="@this">
        <MainHeader @ref="_mainHeader"/>
    </CascadingValue>
    <MudMainContent Class="py-0">
        <CascadingValue Name="MainLayoutInstance" Value="@this">
            @Body
        </CascadingValue>
    </MudMainContent>

    <MainFooter/>
</MudLayout>

@code {
    private MainHeader _mainHeader = new();
    
    public async Task RefreshUserSession()
    {
        await _mainHeader.RefreshUserSession();
    }

    public async Task RefreshBasketAsync()
    {
        await _mainHeader.RefreshBasketAsync();
    }
}