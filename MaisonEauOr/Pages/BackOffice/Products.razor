@page "/admin-products"
@attribute [Authorize(Roles = "Admin")]

@inject IDbContextFactory<MeoDbContext> Factory
@inject IDialogService DialogService
@inject NavigationManager NavManager

<PageTitle>Administration - Produits</PageTitle>

<MudText Class="ml-4" Typo="Typo.h3">Gestion des stocks</MudText>
<MudStack Row>
    <MudButton Class="mx-8 my-2" Variant="Variant.Filled" Color="Color.Success" OnClick="@(async() => await AddProductAsync())">Ajouter un produit</MudButton>
    <MudSpacer/>
    <MudButton Class="mr-8 my-2" StartIcon="@Icons.ArrowBack" Color="Color.Secondary" Variant="Variant.Filled" OnClick="@(() => NavManager.NavigateTo("/admin-panel"))">
        Panel d'administration
    </MudButton>
</MudStack>

<MudDataGrid T="ProductModel" Class="mx-8 mb-16" Items="@_products" Bordered Hover Filterable Square Striped QuickFilter="@QuickFilter" FixedHeader Dense Height="55vh">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Table des produits</MudText>
        <MudSpacer/>
        <MudTextField T="string" @bind-Value="_searchString" Placeholder="Rechercher" Adornment="Adornment.Start" AdornmentIcon="@Icons.Search" />
    </ToolBarContent>
    <Columns>
        <PropertyColumn Title="Stock" Property="x => x.AmountInStock"/>
        <PropertyColumn Title="Nom Produit" Property="x => x.Name"/>
        <PropertyColumn Title="Catégorie" Property="x => x.Category.Humanize()"/>
        <PropertyColumn Title="Prix" Property="x => x.Price" Format="C"/>
        <PropertyColumn Title="TVA" Property="x => x.Tva" Format="P2"/>
        <PropertyColumn Title="Actif" Property="x => x.IsAvailable"/>
        <PropertyColumn Title="Date d'ajout" Property="x => x.AddedAt" Format="dd-MM-yyyy"/>
        <TemplateColumn Filterable="false">
            <CellTemplate>
                <MudStack Row Justify="Justify.SpaceEvenly">
                    <MudIconButton Icon="@Icons.Edit" OnClick="@(async() => await EditProductAsync(context.Item))" />
                    <MudIconButton Icon="@Icons.Delete" OnClick="@(async() => await DeleteProductAsync(context.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>

@code {
    private MeoDbContext _context = null!;
    private List<ProductModel> _products = new();
    private string _searchString = string.Empty;

    public Func<ProductModel, bool> QuickFilter => x =>
    {
        if (x.Name.Contains(_searchString, StringComparison.OrdinalIgnoreCase)) return true;
        if (x.Price.ToString("C").Contains(_searchString, StringComparison.OrdinalIgnoreCase)) return true;
        if (x.AmountInStock.ToString().Contains(_searchString, StringComparison.OrdinalIgnoreCase)) return true;
        if (x.Category.Humanize().Contains(_searchString, StringComparison.OrdinalIgnoreCase)) return true;
        
        return false;
    };

    private DialogOptions _dialogOptions = new DialogOptions
    {
        CloseButton = true,
        DisableBackdropClick = false,
        CloseOnEscapeKey = true
    };
    
    protected override async Task OnInitializedAsync()
    {
        _context = await Factory.CreateDbContextAsync();
        await RefreshProductsAsync();
    }

    private async Task AddProductAsync()
    {
        var dialog = await DialogService.ShowAsync<AddProductDialog>("Ajout d'un produit", _dialogOptions);
        var result = await dialog.Result;

        if (result is { Data : ProductModel model })
        {
            _products.Add(model);
            _context.Products.Add(model);
            _context.Options.AddRange(model.Options);
            await _context.SaveChangesAsync();
            await RefreshProductsAsync();
        }
    }

    private async Task EditProductAsync(ProductModel model)
    {
        var parameters = new DialogParameters<EditProductDialog> { { x => x.Model, model } };
        var dialog = await DialogService.ShowAsync<EditProductDialog>("Modification d'un produit", parameters, _dialogOptions);
        var result = await dialog.Result;

        if (result is { Data : ProductModel newModel })
        {
            try
            {
                _products.Remove(model);
                _products.Add(newModel);
            
                _context.Options.RemoveRange(model.Options);
                _context.Products.Remove(model);
                await _context.SaveChangesAsync();
            
                _context.Products.Add(newModel);
                _context.Options.AddRange(newModel.Options);
                await _context.SaveChangesAsync();
                await RefreshProductsAsync();
            }
            catch (Exception e)
            {
                Console.WriteLine(e);
                throw;
            }
        }
    }

    private async Task DeleteProductAsync(ProductModel model)
    {
        _products.Remove(model);
        _context.Options.RemoveRange(model.Options);
        _context.Remove(model);
        await _context.SaveChangesAsync();
        await RefreshProductsAsync();
    }
    
    private Task RefreshProductsAsync()
    {
        _products.Clear();
        _products.AddRange(_context.Products.ToList());
        foreach (var product in _products)
        {
            product.Options = _context.Options.Where(x => x.ProductID == product.Id).ToList();
        }
        StateHasChanged();
        return Task.CompletedTask;
    }
}