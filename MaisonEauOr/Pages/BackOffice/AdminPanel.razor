@page "/admin-panel"
@attribute [Authorize(Roles = "Admin")]

@inject NavigationManager NavManager
@inject LocalizationService Lang

<PageTitle>@Lang.Get("adminPanel_stock_title") - Panel</PageTitle>

<MudContainer Class="mt-6">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">@Lang.Get("adminPanel_stock_card_title")</MudText>
        <MudText Align="Align.Center">@Lang.Get("adminPanel_stock_card_txt")</MudText>

        <MudGrid Class="mt-6 mb-16" Justify="Justify.Center">
            <MudItem xs="12" md="6">
                <MudCard Class="pa-4" Elevation="2">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">@Lang.Get("adminPanel_stock_card_title")</MudText>
                        <MudText>@Lang.Get("adminPanel_stock_card_txt")</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Color="Color.Primary" StartIcon="@Icons.ProductionQuantityLimits"
                                   OnClick="@(() => NavManager.NavigateTo("/admin-products"))">
                            @Lang.Get("adminPanel_stock_card_btn")
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudCard Class="pa-4" Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">@Lang.Get("adminPanel_user_card_title")</MudText>
                        <MudText>@Lang.Get("adminPanel_user_card_text")</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Color="Color.Primary" StartIcon="@Icons.People"
                                   OnClick="@(() => NavManager.NavigateTo("/admin-clients"))">
                            @Lang.Get("adminPanel_user_card_btn")
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudCard Class="pa-4" Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">@(Lang.Get("adminPanel_management_sells"))</MudText>
                    <MudText>@(Lang.Get("admin_sells_txt"))</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Color="Color.Primary" StartIcon="@Icons.DisplaySettings"
                               OnClick="@(() => NavManager.NavigateTo("/admin-home"))">
                        @(Lang.Get("adminPanel_management_sells"))
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudCard Class="pa-4" Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Gestion des commandes</MudText>
                    <MudText>Gérez les commandes émises par vos clients en modifiant leur statut ainsi que leur prix total.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Color="Color.Primary" StartIcon="@Icons.ShoppingBasket"
                               OnClick="@(() => NavManager.NavigateTo("/admin-orders"))">
                        Gestion des commandes
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudCard Class="pa-4" Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Gestion des codes promotionnels</MudText>
                    <MudText>Créez, modifiez et supprimez tous les code promotionnels de la plateforme.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Color="Color.Primary" StartIcon="@Icons.Discount"
                               OnClick="@(() => NavManager.NavigateTo("/admin-discounts"))">
                        Gestion des codes promotionnels
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    protected override void OnInitialized()
    {
        Lang.LanguageChanged += InvokeStateChanged;
    }

    private async Task InvokeStateChanged(string lang) => await InvokeAsync(StateHasChanged);

}
