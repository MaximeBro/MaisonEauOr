@page "/admin-panel"
@attribute [Authorize(Roles = "Admin")]

@inject NavigationManager NavManager

<PageTitle>Administration - Panel</PageTitle>

<MudContainer Class="mt-6">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Panel d'administration</MudText>
    <MudText Align="Align.Center">Seuls les administrateurs ont accès à cette page !</MudText>
    
    <MudGrid Class="mt-6" Justify="Justify.Center">
        <MudItem xs="6">
            <MudCard Class="pa-4" Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Gestion des stocks</MudText>
                    <MudText>Créez, modifiez et supprimez tous les produits du site à l'aide d'une interface ergonomique.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Color="Color.Primary" StartIcon="@Icons.ProductionQuantityLimits" 
                               OnClick="@(() => NavManager.NavigateTo("/admin-products"))">
                        Gestion des stocks
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="6">
            <MudCard Class="pa-4" Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Gestion des utilisateurs</MudText>
                    <MudText>Créez, modifiez et supprimez tous les comptes utilisateurs de la plateforme.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Color="Color.Primary" StartIcon="@Icons.People"
                               OnClick="@(() => NavManager.NavigateTo("/admin-clients"))">
                        Gestion des utilisateurs
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

