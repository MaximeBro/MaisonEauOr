@page "/about"
@inject LocalizationService Lang



<PageTitle>@(Lang.Get("aboutPageTitle"))</PageTitle>


<MudContainer>
        <MudText Typo="Typo.h3">@(Lang.Get("aboutTitle"))</MudText>

   
    <MudPaper Class="px-10 my-16" Elevation="0" Square Style="background-color: #F7E1C7;">
        <MudStack Class="py-8" Row>
            <MudStack Class="mr-8 px-10 py-6" Row="false" Style="background-color: #fff;" Justify="Justify.Center">
                <MudText Typo="Typo.h5" Align="Align.Center"><b>@(Lang.Get("aboutDescription"))</b></MudText>
                <MudImage Class="mx-auto my-n6" Src="favicon.png" Width="200" />
                <MudText Align="Align.Center">@(Lang.Get("aboutImageDescription"))</MudText>
                    <MudText Align="Align.Center">@(Lang.Get("aboutText"))</MudText>
                <MudText Align="Align.Center">
                        @(Lang.Get("aboutText2"))
                </MudText>
                <MudSpacer />
                
            </MudStack>
            <MudStack Class="flex-grow-1" Style="max-width: 1400px;">
                <MudImage Src="images/home/Bar_parfum_propos.jpg" Style="width: 100%; height: auto;" />
            </MudStack>
        </MudStack>
    </MudPaper>
</MudContainer>

@code {
    protected override void OnInitialized()
    {
        Lang.LanguageChanged += InvokeStateChanged;
    }

    private async Task InvokeStateChanged(string lang) => await InvokeAsync(StateHasChanged);
}